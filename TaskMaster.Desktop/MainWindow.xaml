                </ComboBox>
                
                <ComboBox Name="CmbPriorityFilter" Width="100" Margin="5,0" SelectionChanged="CmbPriorityFilter_SelectionChanged">
                    <ComboBoxItem Content="TÃ¼mÃ¼" IsSelected="True"/>
                    <ComboBoxItem Content="DÃ¼ÅŸÃ¼k"/>
                    <ComboBoxItem Content="Orta"/>
